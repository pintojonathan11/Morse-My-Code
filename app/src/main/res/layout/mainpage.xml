<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/morse_text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Morse"
        android:textColor="#311b92"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:gravity="center"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="150sp"
        android:fontFamily="cursive"/>
    <ImageView
        android:id="@+id/morse_translation_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintLeft_toLeftOf="@id/morse_text_title"
        app:layout_constraintBottom_toBottomOf="@id/morse_text_title"
        android:src="@drawable/morse_translation"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/my_text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="My"
        android:paddingBottom="15dp"
        android:textColor="#311b92"
        android:paddingRight="10dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.50"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.3"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        android:fontFamily="cursive"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/morse_translation_title"/>
    <ImageView
        android:id="@+id/my_translation_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:gravity="fill_horizontal"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintLeft_toLeftOf="@id/my_text_title"
        app:layout_constraintBottom_toBottomOf="@id/my_text_title"
        android:src="@drawable/my_text_translation"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/code_text_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Code"
        android:textColor="#311b92"
        android:paddingLeft="10dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.3"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        android:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_translation_title"/>
    <ImageView
        android:id="@+id/code_translation_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.65"
        app:layout_constraintLeft_toLeftOf="@id/code_text_title"
        app:layout_constraintBottom_toBottomOf="@id/code_text_title"
        android:src="@drawable/code_text_translation"
        />

    <ImageView
        android:id="@+id/arrow_anim_main_page1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClick"
        android:src="@drawable/dot_shape"/>
    <ImageView
        android:id="@+id/arrow_anim_main_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/arrow_anim_main_page1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClick"
        android:src="@drawable/rectangle_shape"/>
    <ImageView
        android:id="@+id/arrow_anim_main_page3"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/arrow_anim_main_page2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onClick"
        android:src="@drawable/arrow_shape"/>
</android.support.constraint.ConstraintLayout>